@model proyectoGrupo_1.Entidades.Producto
@{
    ViewBag.Title = "Registrar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mx-auto mt-5" style="max-width: 700px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Registrar Producto</h4>

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info text-center">
                @ViewBag.msj
            </div>
        }

        @using (Html.BeginForm("RegistrarProducto", "Producto"))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", @placeholder = "Descripción" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", @placeholder = "Cantidad", @type = "number" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @placeholder = "Precio", @type = "number" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.idCategoria, new { @class = "form-control", @placeholder = "Categoría", @type = "number" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Imagen, new { @class = "form-control", @placeholder = "URL de Imagen" })
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary btn-sm">Registrar Producto</button>
            </div>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("VerProductos", "Producto")" class="btn btn-secondary btn-sm">Atrás</a>
        </div>
    </div>
</div>
