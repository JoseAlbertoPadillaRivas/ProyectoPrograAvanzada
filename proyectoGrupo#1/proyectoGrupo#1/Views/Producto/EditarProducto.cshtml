@model proyectoGrupo_1.BaseDatos.tProducto
@{
    ViewBag.Title = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Editar Producto</h2>

    @if (ViewBag.msj != null)
    {
        <div class="alert alert-info text-center" role="alert">
            @ViewBag.msj
        </div>
    }

    @using (Html.BeginForm("EditarProducto", "Producto", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.idProducto)

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", @placeholder = "Descripción del producto" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Precio, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @placeholder = "Precio del producto", @type = "number", step = "0.01" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cantidad, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", @placeholder = "Cantidad disponible", @type = "number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.idCategoria, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.idCategoria, new { @class = "form-control", @placeholder = "ID de la categoría", @type = "number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Imagen, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Imagen, new { @class = "form-control", @placeholder = "URL de la imagen" })
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-xs">Actualizar Producto</button>
        </div>
    }
</div>
