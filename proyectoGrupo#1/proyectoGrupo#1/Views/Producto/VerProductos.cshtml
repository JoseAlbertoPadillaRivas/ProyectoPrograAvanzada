@model List<proyectoGrupo_1.BaseDatos.tProducto>
@{
    ViewBag.Title = "VerProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>

<a class="btn btn-primary mb-2" href="@Url.Action("RegistrarProducto","Producto")">
    Nuevo Producto
</a>
<br />


<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }

        <table id="tablaUsuarios" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Editar Producto</th>
                    <th>Eliminar Producto</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio</td>
                        <td>@item.Cantidad</td>

                        <td style="text-align:center">
                            <a class="btn btn-primary" href="@Url.Action("EditarProducto","Producto", new { idProducto = item.idProducto })">
                                <i class="fas fa-pen"></i>
                            </a>
                        </td>
                        <td style="text-align:center">
                            <button type="button" class="btn btn-primary AbrirModal" data-toggle="modal" data-target="#ModalProductos"
                                    data-id="@item.idProducto" data-name="@item.Descripcion">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="modal fade" id="ModalProductos" data-backdrop="static" data-keyboard="false" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("EliminarProducto", "Producto"))
            {
                <div class="modal-body">
                    @Html.Hidden("idProducto", "")
                    ¿Desea eliminar:  <label id="Descripcion"></label>?
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Procesar</button>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/root/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).on("click", ".AbrirModal", function () {
        $("#id").val($(this).attr('data-id'));
        $("#Descripcion").text($(this).attr('data-name'));
    });
</script>



