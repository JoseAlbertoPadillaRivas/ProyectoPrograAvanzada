@model List<proyectoGrupo_1.BaseDatos.tProducto>
@{
    ViewBag.Title = "VerProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VerProductos</h2>


<div class="row">
    <div class="col-12">

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }

        <table id="tablaUsuarios" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Editar Producto</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Precio</td>
                        <td>@item.Cantidad</td>                        
                        
                        <td style="text-align:center">
                            <a class="btn btn-primary" href="@Url.Action("EditarProducto","Producto", new { id = item.id })">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



