@model proyectoGrupo_1.Entidades.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card" style="width: 100%; max-width: 400px;">
        <div class="card-body login-card-body">
            <p class="login-box-msg" style="text-align:center">Recuperar Acceso</p>

            @if (ViewBag.msj != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.msj
                </div>
            }

            @using (Html.BeginForm("RecuperarAcceso", "Login"))
            {
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Cedula, new { @type = "text", @class = "form-control", @placeholder = "Cedula" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Procesar</button>
                    </div>
                </div>
            }

            <div class="text-center mt-3">
                <a href="@Url.Action("IniciarSesion", "Login")">Iniciar Sesión</a>
            </div>
        </div>
    </div>
</div>
