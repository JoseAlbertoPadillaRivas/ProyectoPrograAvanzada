@model proyectoGrupo_1.BaseDatos.tUsuario

@{
    ViewBag.Title = "Actualizar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h4 class="text-center mb-4" style="font-size: 1.6rem;">Datos del Usuario</h4>
    <hr>

    @if (ViewBag.msj != null)
    {
        <div class="alert alert-info text-center" role="alert">
            @ViewBag.msj
        </div>
    }

    @using (Html.BeginForm("ActualizarUsuario", "Usuario", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.HiddenFor(m => m.id)

        <div class="form-group mb-3">
            @Html.Label("Cédula", htmlAttributes: new { @class = "form-label" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.Cedula, new
                {
                    @type = "text",
                    @class = "form-control",
                    @placeholder = "Cédula",
                    onkeyup = "ConsultarIdentificacion();"
                })
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.Label("Nombre", htmlAttributes: new { @class = "form-label" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre", @readOnly = true })
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.Label("Correo Electrónico", htmlAttributes: new { @class = "form-label" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico" })
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.Label("Perfil", htmlAttributes: new { @class = "form-label" })
            <div class="input-group">
                @Html.DropDownListFor(m => m.idRol, ViewBag.Roles as List<SelectListItem>, new { @class = "form-control" })
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                </div>
            </div>
        </div>

        <div class="form-group text-center mb-4">
            <button type="submit" class="btn btn-primary btn-lg">Actualizar</button>
        </div>
    }
</div>

<script src="~/root/funciones/Usuario.js"></script>
