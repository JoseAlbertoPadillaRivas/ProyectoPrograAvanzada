@model proyectoGrupo_1.BaseDatos.tUsuario

@{
    ViewBag.Title = "Actualizar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 600px;">
        <br>
        <h3 class="card-title text-center mb-4">Actualizar Datos del Usuario</h3>
        <div class="card-body">

            @if (ViewBag.msj != null)
            {
                <div class="alert alert-info text-center" role="alert">
                    @ViewBag.msj
                </div>
            }

            @using (Html.BeginForm("ActualizarPerfil", "Perfil", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.id)

                <div class="form-group mb-4">
                    @Html.LabelFor(m => m.Cedula, htmlAttributes: new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Cedula, new
                        {
                            @class = "form-control",
                            @placeholder = "Identificación",
                            onkeyup = "ConsultarIdentificacion();"
                        })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Cedula, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Nombre, new
                        {
                            @class = "form-control",
                            @placeholder = "Nombre",
                            @readonly = "readonly"
                        })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Correo, new
                        {
                            @class = "form-control",
                            @placeholder = "Correo Electrónico",
                            @type = "email"
                        })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Actualizar</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/root/funciones/Usuario.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" integrity="sha512-LcX+MXjFXXsU91PzBhX4FTrtZjP6aFxOeNduzQljKoPLkFWw1EvM3eO4OwWVqPS6lK5D4jB0EgFZ7D9Wx72h3w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
