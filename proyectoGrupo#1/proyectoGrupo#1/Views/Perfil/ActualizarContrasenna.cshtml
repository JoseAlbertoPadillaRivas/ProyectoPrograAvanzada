@model proyectoGrupo_1.Entidades.Usuario

@{
    ViewBag.Title = "Actualizar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4 class="text-center mb-4">Actualizar Contraseña</h4>
                    <hr>

                    @if (ViewBag.msj != null)
                    {
                        <div class="alert alert-info text-center" role="alert">
                            @ViewBag.msj
                        </div>
                    }

                    @using (Html.BeginForm("ActualizarContrasenna", "Perfil"))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Contrasenna, "Contraseña Nueva", new { @class = "font-weight-bold" })
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(m => m.Contrasenna, new
                               {
                                   @type = "password",
                                   @class = "form-control",
                                   @placeholder = "Ingrese su nueva contraseña"
                               })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmarContrasenna, "Confirmar Contraseña", new { @class = "font-weight-bold" })
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(m => m.ConfirmarContrasenna, new
                               {
                                   @type = "password",
                                   @class = "form-control",
                                   @placeholder = "Confirme su nueva contraseña"
                               })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Actualizar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
