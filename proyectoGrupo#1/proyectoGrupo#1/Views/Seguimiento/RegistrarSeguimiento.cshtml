@model proyectoGrupo_1.Entidades.Seguimiento

@{
    ViewBag.Title = "Registrar Seguimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mx-auto mt-5" style="max-width: 700px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Registrar Seguimiento</h4>

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info text-center">
                @ViewBag.msj
            </div>
        }

        @using (Html.BeginForm("RegistrarSeguimiento", "Seguimiento"))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.idUsuario, new { @class = "form-control", @placeholder = "ID del usuario", @type = "number" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.nombreProducto, new { @class = "form-control", @placeholder = "Nombre del producto" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.fechaIngreso, new { @class = "form-control", @placeholder = "fecha de ingreso", @type = "date" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.fechaSalida, new { @class = "form-control", @placeholder = "fecha de salida", @type = "date" })
            </div>


            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary btn-sm">Registrar Seguimiento</button>
            </div>
        }

        <div class="text-center mt-4">
            <a href="@Url.Action("ConsultarSeguimientos", "Seguimiento")" class="btn btn-secondary btn-sm">Atrás</a>
        </div>
    </div>
</div>

