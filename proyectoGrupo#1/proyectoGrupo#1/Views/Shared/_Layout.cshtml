<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Proyecto grupo#1</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/root/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/root/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/root/dist/css/styles.css" rel="stylesheet" />
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap4.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />*@

    <link href="~/root/dist/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/root/dist/css/responsive.css">
    <link rel="stylesheet" type="text/css" href="~/root/dist/css/colors/color1.css" id="colors">
    <link rel="stylesheet" type="text/css" href="~/root/dist/css/animate.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <header id="header" class="header style1 clearfix">
            <div class="header-inner">
                <div id="logo" class="logo">
                    <img src="~/root/dist/img/FotoPlusLogo.png" alt="image">
                </div>
                <div class="nav-wrap">
                    <div class="btn-menu open"></div>
                    <nav id="mainnav" class="mainnav">
                        <ul class="menu">

                            @if (Session["RolUsuario"].ToString() == "2")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                                </li>
                                <li><a href="@Url.Action("VerProductos","Producto")">Productos</a></li>
                            }
                            <li><a href="@Url.Action("Home","Login")">Home</a></li>
                            <li><a href="@Url.Action("VerCelulares","Producto")">Celulares</a></li>
                            <li><a href="@Url.Action("VerAccesorios","Producto")">Accesorios</a></li>
                            <li><a href="@Url.Action("VerComputadoras","Producto")">Computadoras</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    @Session["NombreUsuario"].ToString()
                                    <i class="fa fa-user ml-2"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Perfil","Perfil")" class="dropdown-item">
                                        <i class="fa fa-users mr-2"></i> Perfil
                                        <span class="float-right text-muted text-sm"></span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <i class="fa fa-lock mr-2"></i> Seguridad
                                        <span class="float-right text-muted text-sm"></span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("CerrarSesion","Login")" class="dropdown-item">
                                        <i class="fa fa-door-open mr-2"></i> Cerrar Sesión
                                        <span class="float-right text-muted text-sm"></span>
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="@Url.Action("ConsultarCarrito","Carrito")" class="nav-link">
                                    <i class="nav-icon fas fa-shopping-bag"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div class="content-wrapper">
            <section class="content">

                @RenderBody()

            </section>
        </div>


        @if (Session["RolUsuario"].ToString() == "2")
        {
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a href="@Url.Action("Home", "Login")" class="brand-link">
                    <img src="~/root/dist/img/FotoPlusLogo.png"
                         alt="AdminLTE Logo"
                         class="brand-image img-circle elevation-3"
                         style="opacity: .8">
                    <span class="brand-text font-weight-light">Foto Plus</span>
                </a>
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">


                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>
                                        Mantenimientos
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ConsultarUsuarios", "Usuario")" class="nav-link">
                                            <i class="far fa-users nav-icon"></i>
                                            <p>Usuarios</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="@Url.Action("VerProductos", "Producto")" class="nav-link">
                                            <i class="far fa-users nav-icon"></i>
                                            <p>Productos</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="@Url.Action("ConsultarCategorias", "Categoria")" class="nav-link">
                                            <i class="far fa-users nav-icon"></i>
                                            <p>Categoria</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    </nav>
                </div>

            </aside>

            <footer class="main-footer">
                <strong>Copyright &copy; @DateTime.Now.Year </strong> All rights reserved.
            </footer>

            <aside class="control-sidebar control-sidebar-dark">
            </aside>

        }
    </div>

    <script src="~/root/plugins/jquery/jquery.min.js"></script>
    <script src="~/root/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/root/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
